{
  "name": "aigne-runtime",
  "private": true,
  "version": "1.4.0",
  "scripts": {
    "dev": "blocklet dev",
    "lint": "tsc --noEmit && biome check",
    "lint:fix": "biome check --write && pnpm run lint",
    "start": "cross-env NODE_ENV=development nodemon --exec tsx api/dev.ts -w api",
    "clean": "node scripts/build-clean.mjs",
    "bundle": "tsc --noEmit && npm run bundle:client && npm run bundle:api",
    "bundle:client": "vite build",
    "bundle:api": "npm run clean && tsc -p tsconfig.api.json && blocklet bundle --compact --create-release --external @aigne/sqlite",
    "deploy": "npm run bundle && blocklet deploy .blocklet/bundle",
    "upload": "npm run bundle && blocklet upload .blocklet/release/blocklet.json"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@aigne/aigne-hub": "workspace:^",
    "@aigne/core": "workspace:^",
    "@aigne/observability-api": "workspace:^",
    "@aigne/sqlite": "workspace:^",
    "@aigne/transport": "workspace:^",
    "@arcblock/did-connect-react": "^3.1.28",
    "@arcblock/ux": "^3.1.28",
    "@blocklet/sdk": "^1.16.48",
    "@blocklet/ui-react": "^3.1.28",
    "@mui/icons-material": "^7.3.1",
    "@mui/material": "^7.3.1",
    "@uiw/react-markdown-preview": "^5.1.5",
    "axios": "^1.7.9",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv-flow": "^4.1.0",
    "express": "^4.21.2",
    "express-async-errors": "^3.1.1",
    "flat": "^5.0.2",
    "framer-motion": "^12.23.12",
    "react-error-boundary": "^6.0.0",
    "ufo": "^1.6.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@blocklet/js-sdk": "^1.16.48",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/dotenv-flow": "^3.3.3",
    "@types/express": "^4.17.21",
    "@types/flat": "^5.0.5",
    "@types/node": "^20.17.19",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.6.0",
    "cross-env": "^7.0.3",
    "nodemon": "^3.1.9",
    "npm-run-all": "^4.1.5",
    "react": "~19.1.0",
    "react-dom": "~19.1.0",
    "react-router-dom": "^6.30.1",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3",
    "vite": "^7.0.4",
    "vite-plugin-blocklet": "^0.10.1",
    "vite-plugin-svgr": "^4.3.0",
    "zx": "^8.6.2"
  },
  "importSort": {
    ".js, .jsx, .mjs": {
      "parser": "babylon",
      "style": "module"
    },
    ".ts, .tsx": {
      "style": "module",
      "parser": "typescript"
    }
  }
}
